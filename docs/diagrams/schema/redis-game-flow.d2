Game Flow Redis Data Model: {
  GameState: {
    shape: rectangle
    label: "game-state:{gameId}"
    type: "Hash"
    fields: |md
      - players (JSON)
      - position (FEN notation)
      - lastMoveEpoch
      - startedAt
      - drawOffer (JSON)
    |
  }

  UserGameMapping: {
    shape: rectangle
    label: "game-id:{userId}"
    type: "String"
    description: "Active game ID for user"
  }
}
