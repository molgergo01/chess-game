{
    "$schema": "https://turbo.build/schema.json",
    "tasks": {
        "build": {
            "dependsOn": ["^build"],
            "outputs": [".next/**", "!.next/cache/**", "dist/**"]
        },
        "check-types": {
            "dependsOn": ["^check-types"]
        },
        "start": {
            "dependsOn": ["build"],
            "outputs": []
        },
        "test:jest": {
            "dependsOn": ["^test:jest"],
            "cache": false
        },
        "test:cypress-component": {
            "dependsOn": ["^test:cypress-component"],
            "cache": false
        },
        "test:cypress-e2e": {
            "dependsOn": ["^test:cypress-e2e"],
            "cache": false
        },
        "dev": {
            "persistent": true,
            "cache": false
        },
        "lint:type-check": {
            "dependsOn": ["^lint:type-check", "^build"]
        }
    }
}
